# Maintainer: siphr <archlinux@techtum.dev>
pkgname=urw
pkgver=0.0
pkgrel=5
pkgdesc="Random Urdu words/phrases generator."
depends=(python)
arch=(x86_64)
source=("https://github.com/siphr/urw.git")
url=https://www.techtum.dev/work-urw-220310.html
license=('MIT')

build() {
    echo "PREPARING..."
    pip install -U urw 
    
    echo "echo BUILD DATE: `date`" > urw
    echo "python -m urw.urw \$@" >> urw

    chmod +x $srcdir/urw
}

package() {
    echo "INSTALLING..."
    mkdir -p $pkgdir/usr/bin
    cp "$srcdir/urw" "$pkgdir/usr/bin/urw"
    echo 'Finished setting up urw.'
}

md5sums=('SKIP')
